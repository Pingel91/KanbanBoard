@using UserStoryBoard.Pages.LogIn
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UserStoryBoard</title>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootswatch/4.2.1/slate/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">UserStoryBoard</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        @*<li class="nav-item">
                    <a class="nav-link text-light" asp-area="" asp-page="/UserStories/UserStories">User Stories</a>
                </li>*@
                        @*<li class="nav-item">
                <a class="nav-link text-light" asp-area="" asp-page="KanbanBoard">Kanban Board</a>
                </li>*@
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-page="/Boards/SelectKanbanBoard">Select Kanban Board</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-page="/TimeLine/TimeLine">SizeMeUp</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-page="/InceptionDecks/InceptionsDeck">Inception Deck</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-page="/CanvasModel/CanvasModel">Canvas Model</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-page="/SwotAnalyse/SwotAnalyse">Swot Analyse</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-page="/4LevelsTests/SystemTest">Test Lab</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-page="/Backlogs/BacklogUserStory">Backlog</a>
                        </li>
                        @*<li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>*@
                    </ul>
                </div>

                <ul class="navbar-nav">
                    @{
                        if (LogInPageModel.LoggedInUser == null)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/LogIn/LoginPage">Login</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item nav-link mr-3">
                                User: @LogInPageModel.LoggedInUser.UserName
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/LogIn/LogoutPage">Logout</a>
                            </li>
                        }
                    }
                </ul>

            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - UserStoryBoard - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/ajaxSupport.js"></script>
    <script src="~/js/mousetrack.js"></script>
    <script src="~/js/card.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>

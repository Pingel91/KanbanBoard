@page
@using global::UserStoryBoard.Models
@model UserStoryBoard.Pages.SelectKanbanBoardModel
@{
}

<div class="mb-2">
    <a class="btn btn-success" type="button" asp-page="CreateKanbanBoard">
        <i class="fa fa-plus"></i>
    </a>
</div>

<div class="list-group">
    @for (int i = 0; i < Model.KanbanBoards.Count; i++)
    {
    <div class="card-header m-sm-1">
        <a class="list-group-item list-group-item-action text-light m-sm-1" asp-page="KanbanBoard" asp-route-id="@Model.KanbanBoards[i].Id">
            @Model.KanbanBoards[i].Id) <strong>@Model.KanbanBoards[i].BoardName</strong> - @Model.KanbanBoards[i].Description <span style="float:right"> Created: @Model.KanbanBoards[i].CreationDate.Day/@Model.KanbanBoards[i].CreationDate.Month/@Model.KanbanBoards[i].CreationDate.Year </span>
        </a>
        <a class="btn btn-warning m-sm-1" type="button" asp-page="EditKanbanBoard" asp-route-boardId="@Model.KanbanBoards[i].Id">
            <i class="fa fa-edit"></i>
        </a>
        <a class="btn btn-danger m-sm-1" type="button" asp-page="DeleteKanbanBoard" asp-route-boardId="@Model.KanbanBoards[i].Id">
            <i class="fa fa-trash"></i>
        </a>
    </div>
    }
</div>

@page
@model UserStoryBoard.Pages.User.GetUsersModel
@{
    ViewData["Title"] = "GetUsers";
}
<h1>GetUsers</h1>


<p>
    <a asp-page="CreateUser">Create New User</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            Name
        </th>
        <th>
            Image
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Users)
    {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                <img src="~/Images/@item.ImageName" width="60" height="70">
            </td>
            <td>
                <p>
                    <a asp-page="EditUser" asp-route-id="@item.Id">Edit
                        <i class="fa fa-edit"></i>
                        </a> |

                    <a asp-page="DeleteUser" asp-route-id="@item.Id">Delete
                        <i class="fa fa-trash"></i>
                        </a>
                </p>
            </td>
        </tr>
    }
    </tbody>
    
</table>




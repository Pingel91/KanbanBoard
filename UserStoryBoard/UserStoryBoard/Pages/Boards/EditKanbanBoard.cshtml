@page "{id:int}"
@model UserStoryBoard.Pages.Boards.EditKanbanBoardModel
@{
}

<h1>Edit Kanban Board</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <input type="hidden" asp-for="@Model.KanbanBoard.Id" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.KanbanBoard.BoardName" class="control-lable"></label>
                <input asp-for="@Model.KanbanBoard.BoardName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.KanbanBoard.Description" class="control-lable"></label>
                <input asp-for="@Model.KanbanBoard.Description" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.KanbanBoard.CreationDate" class="control-lable"></label>
                <input asp-for="@Model.KanbanBoard.CreationDate" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-page="/KanbanBoard">Back to Kanban Boards Page</a>
</div>
@page "{id:int}"
@model UserStoryBoard.Pages.BacklogUserStoryModel
@{
    <h1>Backlog</h1>

    <div class="mb-2">
        <a class="btn" type="button" asp-page="CreateUserStory">
            <i class="fa fa-plus"></i>
        </a>
    </div>

    foreach (var userStory in @Model.GetUserStories())
    {
        <div class="card mb-2" style="width: 30rem">
            <div class="card-header p-2">
                <h5 class="card-title">
                    <small class="text-muted">(@userStory.Id)</small> @userStory.Name
                </h5>
            </div>
            <div class="card-body">
                <p class="card-text">@userStory.Description</p>
            </div>
            
            <div class="card-footer">
                <a class="btn" type="button" asp-page="DeleteUserStory" asp-route-id="@userStory.Id">
                    <i class="fa fa-trash"></i>
                </a>
                <a class="btn" type="button" asp-page="UserStoryDetail" asp-route-id="@userStory.Id">
                    <i class="fa fa-info-circle"></i>
                </a>
                <a class="btn" type="button" asp-page="EditUserStory" asp-route-id="@userStory.Id">
                    <i class="fa fa-edit"></i>
                </a>
                
            </div>
        </div>
    }
}
